# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#Products routes
POST	/product					controllers.ProductController.postProduct()
POST	/product/add				controllers.ProductController.addProduct()
GET		/product/:id 				controllers.ProductController.getProduct(id:String)
DELETE	/product/:id 				controllers.ProductController.deleteProduct(id:String)
GET		/products 					controllers.ProductController.getProducts()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
